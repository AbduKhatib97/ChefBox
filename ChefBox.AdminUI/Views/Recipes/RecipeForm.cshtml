@using ChefBox.AdminUI.ViewModels.Recipe
@model RecipeFormViewModel


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add new recipe</h4>
                <form asp-controller="Recipes" asp-action="SaveForm" method="post">
                    <div class="row hide">
                        <div class="col-md-12 form-group">
                            <label asp-for="Recipe.Id"></label>
                            <input asp-for="Recipe.Id" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Recipe.Name"></label>
                            <input asp-for="Recipe.Name" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Recipe.CategoryId"></label>
                            <select asp-for="Recipe.CategoryId" asp-items="Model.Categories" class="form-control"></select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Recipe.RecipeType"></label>
                            <select asp-for="Recipe.RecipeType" asp-items="Html.GetEnumSelectList<RecipeType>()" class="form-control"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Recipe.Description"></label>
                            <textarea asp-for="Recipe.Description" class="form-control ck-editor"
                                      rows="5">

                            </textarea>
                        </div>
                    </div>
                    <div class="row">
                        <!--Ingredients-->
                    </div>
                    <div class="row">
                        <!--Photos-->
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="Recipe.IsPublished" class="custom-control-input">
                                <label class="custom-control-label" asp-for="Recipe.IsPublished"></label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Save</button>
                    <a asp-controller="Recipes" asp-action="Index" class="btn btn-default float-right mx-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/ckEditor/ckeditor.js"></script>
    <script src="~/js/Views/Recipe/RecipeForm.js"></script>
}
