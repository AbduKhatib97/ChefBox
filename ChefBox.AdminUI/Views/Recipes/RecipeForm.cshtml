                                                        <label class="custom-control-label"
                                                               asp-for="@(Model.RecipeIngredients[index].IsChecked)">Select</label>
                                                    </div>
                                                    <input type="hidden" asp-for="@(Model.RecipeIngredients[index].IngredientId)" />

                                                </td>
