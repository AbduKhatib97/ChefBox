@using ChefBox.AdminUI.ViewModels.Recipe
@model RecipeFormViewModel


<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="card-title">Recipe Form</h3>
                <form asp-controller="Recipes" asp-action="RecipeForm" method="post">
                    <div class="row hide">
                        <div class="col-md-12 form-group">
                            <label asp-for="Id"></label>
                            <input asp-for="Id" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="CategoryId"></label>

                            <div class="row">
                                <div class="col-md-11">
                                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>

                                </div>
                                <div class="col-md-*">
                                    <a href="#" class="btn form-control" id="categoryModalCaller"><i class="fas fa-cog"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="RecipeType"></label>
                            <select asp-for="RecipeType" asp-items="Html.GetEnumSelectList<RecipeType>()" class="form-control"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control ck-editor"
                                      rows="5">

                            </textarea>
                        </div>
                    </div>
                    <div class="row">
                        <!--Ingredients-->
